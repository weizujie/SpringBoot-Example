<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kaizen.shiro.mapper.UserMapper">

    <!-- 根据 id 查询用户信息 -->
    <select id="findById" resultType="kaizen.shiro.pojo.User">
        select id, username, salt, created_time, updated_time from user where id = #{id}
    </select>

    <!-- 查询用户信息列表 -->
    <select id="userList" resultType="kaizen.shiro.pojo.User">
        select id, username, salt, created_time, updated_time from user
    </select>

</mapper>